INSERT INTO step_keyword (step_id, keyword_id)
			SELECT s.step_id, k.keyword_id
			  FROM keyword AS k
				   CROSS JOIN step AS s
			 WHERE REGEXP_INSTR(s.step_name, CONCAT('\\b', k.keyword_name, '\\b'));

 SELECT CONCAT (l.module_id, '.',
				s.lesson_id, '.',
				k.step_id, ' ',
				s.step_name) AS Шаг
   
   FROM step_keyword AS k
		JOIN step AS s USING (step_id)
		JOIN lesson AS l USING (lesson_id)
		JOIN module AS m USING (module_id)
  ORDER BY Шаг;


