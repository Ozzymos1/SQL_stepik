 SELECT CONCAT (l.module_id, '.',
				l.lesson_position, '.',
				LPAD(step_position, 2, '0'), ' ',
				s.step_name) AS Шаг   
   FROM step_keyword AS sk
		JOIN step AS s USING (step_id)
		JOIN lesson AS l USING (lesson_id)
		JOIN module AS m USING (module_id)
		JOIN keyword AS k USING (keyword_id)
  WHERE keyword_name='MAX' OR 'AVG'
  ORDER BY Шаг;


